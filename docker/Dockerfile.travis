# Dockerfile for building PyKaldi image from PyKaldi dependencies image
FROM pykaldi/pykaldi:latest

# Copy pykaldi directory into the container
COPY . /pykaldi_travis

# Install PyKaldi
RUN cd /pykaldi \
	# && git remote add travis /pykaldi_travis \
	&& git fetch /pykaldi_travis \
	&& git checkout temp \
	&& pip uninstall -y pykaldi \
	&& python setup.py install \
	# && git remote rm travis \
	&& rm -rf /pykaldi_travis \