# Dockerfile for building pykaldi image from pykaldi-min image
FROM pykaldi/prereqs:latest

# Copy pykaldi directory into the container
COPY . /pykaldi

# Install PyKaldi
RUN cd /pykaldi/tools \
	&& ln -s /kaldi . \
	&& cd /pykaldi \
    && python setup.py install \
    && find kaldi -name "*.so" -delete \
    && rm -rf build
